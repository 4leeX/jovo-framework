{
  "compilerOptions": {
    "lib": [
      "es2017",
      "es2015",
      "dom"
    ],
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "removeComments": false,
    "allowUnreachableCode": false,
    "resolveJsonModule": true,
    "noImplicitReturns": true,
    "preserveConstEnums": true,
    "esModuleInterop": true,
    "declaration": true,
    "strict": true,
    "outDir": "./dist",
    "sourceMap": true
  },
  "include": [
    "**/*.d.ts",
    "src/**/*"
  ],
  "exclude": [
    "dist",
    "node_modules",
    "test"
  ]
}
